<div>
    <h1>Listado de productos en vivo</h1>
    <ul id="product-list"></ul>



    <form action="" id="addProductForm">
        <h2>Ingrese todos los campos</h2>
        
        <label for="title" class="title">Ingrese el nombre del producto</label>
        <input type="text" name="title" class="title" id="title">
        
        <label for="description" class="description">Ingrese una descripcion del producto</label>
        <input type="text" name="description" class="description" id="description">
        
        <label for="price" class="price">Ingrese el precio del producto</label>
        <input type="number" name="price" class="price" id="price">

        <label for="thumbnail" class="thumbnail">Ingrese una imagen</label>
        <input type="file" name="thumbnail" class="thumbnail" id="thumbnail">

        <label for="code" class="code">Ingrese un codigo de producto</label>
        <input type="text" name="code" class="code" id="code">

        <label for="category" class="category">Ingrese la categoria del producto</label>
        <select name="" id="category" class="category">
            <option value="Pick-up">Pick-up</option>
            <option value="SUV">SUV</option>
            <option value="Hatchback">Hatchback</option>
            <option value="Sedan">Sedan</option>
            <option value="Todoterreno">Todoterreno</option>
        </select>

        <label for="stock" class="stock">Ingrese el stock del producto</label>
        <input type="text" name="stock" class="stock" id="stock">

        <button type="submit" id="submit-button">Agregar producto</button>
    </form> 
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>