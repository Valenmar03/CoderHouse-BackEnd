<div class="header">

        <h1 class="header-title">Bienvenido {{{user.name}}}</h1>

        <div class="register-login-logout">

                {{#if admin}}
                        <button id="profile-btn" class="header-btn">Perfil</button>
                        <p style="font-size: larger;">|</p>
                        <button id="logout-btn" class="header-btn">Cerrar sesion</button>
                {{else}}
                        {{#if user}}
                                <button id="profile-btn" class="header-btn">Perfil</button>
                                <p style="font-size: larger;">|</p>
                                <button id="logout-btn" class="header-btn">Cerrar sesion</button> 
                                <p style="font-size: larger;">|</p>                       
                                <a href="/carts/{{user.cart}}" ><button id="cart-btn" class="header-btn">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart2" viewBox="0 0 16 16">
                                                <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                                        </svg>
                                </button></a>
                        {{else}}
                                <button id="login-btn" class="header-btn">Inicia sesion</button>
                                <button id="register-btn" class="header-btn">Registrate</button>
                        {{/if}}
                
                {{/if}}             

        </div>
        
</div>

<div class="contenedor">

        <p>Seleccione la categoria</p>


        <form action="POST"> 
                <select name="" id="">
                <option value="none">Sin categoria</option>    
                <a href="/?category=remera"><option value="remeras">Remeras</option></a>
                <a href="/?category=buzos"><option value="buzos">Buzos</option></a>
                <a href="/?category=pantalones"><option value="pantalones">Pantalones</option></a>
                <a href="/?category=zapatillas"><option value="zapatillas">Zapatillas</option></a>
                </select>
        </form>

        <div class="cards-contenedor">
                        
                {{#if prod}}
                {{#each prod}}
                 <div class="cards">
                        <a href="/products/{{this._id}}" style="color: black; text-decoration:none">
                                <h2>{{this.title}}</h2>
                                <img src="./Images/{{this.category}}.jpg" alt="{{this.title}}" id="prod-img">
                                <p>Precio: ${{this.price}}</p>
                                <p class="stock">Stock: {{this.stock}}</p>
                        </a>
                        <p id="error-msg" class="error-msg" style="color: red;"></p>
                        <button id="add-to-cart" class="add-to-cart" value="{{this._id}} {{this.stock}}" >Agregar al carrito</button>
                </div>
                                
                {{/each}}
                {{else}}
                        <p>No se encontraron productos</p>
                {{/if}}
                        
        </div>

        <div class="paginate">

                {{#if hasPrevPage}}
                <a href="/?page={{prevPage}}"><button>Pagina Previa</button></a>
                {{/if}}

                        <p class="page">{{page}}</p>

                {{#if hasNextPage}}
                <a href="/?page={{nextPage}}"><button>Pagina Siguiente</button></a>
                {{/if}}       
        </div>
</div>

<script src="/js/mainPages/home.js"></script>